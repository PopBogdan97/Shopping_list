<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <init-param>
        <param-name>jersey.config.server.provider.classnames</param-name>
        <param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
    </init-param>
    
    <servlet>
        <servlet-name>GetCatProdServlet</servlet-name>
        <servlet-class>servlets.GetCatProdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListCatProdServlet</servlet-name>
        <servlet-class>servlets.ListCatProdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProdServlet</servlet-name>
        <servlet-class>servlets.GetProdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCatProdServlet</servlet-name>
        <url-pattern>/ListCatProdServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCatProdServlet</servlet-name>
        <url-pattern>/GetCatProdServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProdServlet</servlet-name>
        <url-pattern>/GetProdServlet</url-pattern>
    </servlet-mapping>
    
    /************* Filters **************/
    <filter>
        <filter-name>ShoppingListsFilter</filter-name>
        <filter-class>filters.ShoppingListFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ShoppingListsFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/adminPanel.jsp</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>LoggedFilter</filter-name>
        <filter-class>filters.LoggedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoggedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
